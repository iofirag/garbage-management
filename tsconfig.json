{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "exclude": [
        "test/*", "**/*/.spec.ts"
    ],
    "include": [
        "src/**/*", "test"
, "utils", "index.ts", "components", "config", "middlewares", "routes", "services"    ]
}